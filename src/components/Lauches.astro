---
import { getSapceXData } from '../services/spacex'
import CardLaunch from './CardLaunch.astro'

const lauches = await getSapceXData()
---

<section class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
  {
    lauches.map(({ id, links, details, flight_number, success }) => (
      <CardLaunch
        id={id}
        img={links.patch.small}
        details={details}
        flightNumber={flight_number}
        success={success}
      />
    ))
  }
</section>
